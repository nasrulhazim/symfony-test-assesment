{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello there!
		</h1>

		{% if app.user %}
			<a href="{{ path('app_logout') }}">Logout</a>
		{% else %}
			<p>Please check your email to verify your account or click <a href="/register">here</a> to register.</p>
		{% endif %}
	</div>
{% endblock %}
